{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SectionConfig",
  "type": "object",
  "properties": {
    "displaySettings": {
      "type": "object",
      "properties": {
        "showViewAll": { "type": "boolean" },
        "showBadge": { "type": "boolean" },
        "showPrice": { "type": "boolean" },
        "showRating": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "layoutSettings": {
      "type": "object",
      "properties": {
        "itemSpacing": { "type": "integer" },
        "columns": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "behaviorSettings": {
      "type": "object",
      "properties": {
        "autoPlay": { "type": "boolean" },
        "loop": { "type": "boolean" },
        "delay": { "type": "integer" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}